/* Slider container */
.slider-container {
    position: relative;
    width: 100%;
    max-width: 100%;  /* Ekran genişliğine göre uyum sağlar */
    margin: auto;
    overflow: hidden; /* Fotoğraf dışarı taşmasın */
}

/* Slider image */
#slider {
    width: 100%;
    height: auto;
    display: block;
    transition: opacity 0.5s ease-in-out; /* Animasyon için geçiş efekti */
    object-fit: cover; /* Fotoğrafın orantılı bir şekilde doldurulmasını sağlar */
}

/* Next/Previous buttons */
.prev, .next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2rem;
    color: white;
    background: rgba(0, 0, 0, 0.5);
