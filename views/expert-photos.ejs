    gap: 10px;
}

.social-icons a {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #222;
    border-radius: 50%;
    text-decoration: none;
    transition: transform 0.3s, background-color 0.3s;
}

.social-icons i {
