            font-size: 30px;
            text-decoration: none;
            font-weight: bold;
        }

        .nav-links {
            display: flex;
            list-style-type: none;
            gap: 15px;
            margin: 0;
            padding: 0;
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
                flex-direction: column;
                width: 100%;
                background-color: #333;
                position: absolute;
                top: 60px;
                left: 0;
            }

            .nav-links.active {
                display: flex;
            }

            .menu-toggle {
                display: block;
            }

            #imageContainer {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        .hidden-buttons {
            display: none;
            position: absolute;
            top: 40px;
            left: 0;
            background-color: #333;
            padding: 10px;
            border-radius: 5px;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .nav-links li:hover .hidden-buttons {
            display: block;
            background-color: #333;
            color: #EBCB44;
            animation: fadeIn 2s ease forwards;
            animation-delay: 0s;
            opacity: 1;
        }

        .hidden-buttons button {
            background-color: #333;
            color: #EBCB44;
            border: 1px solid #EBCB44;
            padding: 10px 15px;
            margin: 5px 0;
            width: 100%;
            text-align: center;
            cursor: pointer;
            font-size: 16px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .hidden-buttons button:hover {
            background-color: #EBCB44;
            color: #333;
            transform: scale(1.05);
        }

