        </ul>
        <div class="menu-toggle" onclick="toggleMenu()">☰</div>
    </nav>

<div style="display: flex ;"> 

  <div style="width: 50%;">


    <h1>Layihələri yüklə</h1>
    <form action="/upload" method="POST" enctype="multipart/form-data">
      <input type="file" name="photo" required>
      <textarea name="description" placeholder="Açıklama"></textarea>
      <button type="submit">Yüklə</button>
    </form>
  
    <h2>Yüklənən Fotolar</h2>
    <div class="photo-container">
      <% if (photos && photos.length > 0) { %>
        <% photos.forEach(photo => { %>
          <div class="photo-item">
            <img src="data:image/jpeg;base64,<%= photo.image %>" alt="Fotoğraf">
            <p><%= photo.description %></p>
            <!-- Silme butonu için form -->
            <form action="/delete-photo/<%= photo.id %>" method="POST">
              <button type="submit">Sil</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p>Henüz fotoğraf yüklenmedi.</p>
      <% } %>




  </div>




  <div style="width: 50%;">
    



  
  </div>
</body>
